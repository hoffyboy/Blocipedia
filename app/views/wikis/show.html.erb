<% if user_is_authorized_for_private_wikis(@wiki) %>
  <h1>
    <%= @wiki.title %> <br>
    <small>
      submitted <%= time_ago_in_words(@wiki.created_at) %> ago by <%= @wiki.user.email %>
    </small>
  </h1>
  <div class="row">
    <div class="col-md-8">
      <p><%= Markdown.new(@wiki.body).to_html.html_safe %></p>
    </div>
    <br>
    <% if user_signed_in? %>
      <div class="col-md-4">
        <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success' %>
        <% if user_is_authorized_for_wiki?(@wiki) %>
          <%= link_to "Delete Post", @wiki, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this wiki?'} %>
        <% end %>
      </div>
    <% end %>
  </div>
<% else %>
  <h2>Sorry, you are unauthorized to see this private wiki.</h2>
<% end %>
